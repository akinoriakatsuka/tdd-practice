{

  "scripts": {
    "test": "phpunit tests --color",
    "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist",
    "cs-check": "php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.dist",
    "phpstan": "phpstan analyse -l 9 app tests"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "10.0.*",
    "friendsofphp/php-cs-fixer": "^3.23",
    "phpstan/phpstan": "^1.10"
  }
}
